<header>
  <h1>Books</h1>
</header>

<main>
  <table>
      <tbody>
        <tr>
            <th>Title</th>
            <th>Body</th>
          </tr>
          </tbody>
          <tbody>
            <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
          </tr> 
            <% end %>
       </tbody>   
    </table>
</main>

<footer>
  <h1>New book</h1>
  
      <%= form_for (@book) do |f| %>
      
      <% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %> error</li>
      <% end %>
    </ul>
  </div>
<% end %>
        
        <p>Title</p>
        <%= f.text_field  :title %>
        <p>Body</p>
        <%= f.text_area :body %> <br>

        <%= f.submit "Create Book" %>
      <% end %>

</footer>